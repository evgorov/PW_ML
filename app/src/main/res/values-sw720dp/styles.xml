<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextViewHint" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#c2b8af</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="NavigationBarText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_gravity">center_vertical|center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>
    <style name="EditTextText">
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColorHint">#c2b8af</item>"
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="GamefieldTimerText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="GamefieldHintBtnText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="GamefieldPercentText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">21sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <style name="GamefieldPauseText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <style name="GamefieldNearSwitchText">
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="InviteItemNameText">
        <item name="android:textColor">#504f4a</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
</resources>