<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/login_bg_tile"
        >

    <ImageView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/login_enter_top_shadow"
            />

    <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"

            >

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >



            <FrameLayout
                    android:id="@+id/authorization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:background="@drawable/login_main_bg"
                    >


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="20dp">

                    <Button
                            android:id="@+id/enter_to_authorization_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:background="@drawable/login_enter_but"/>

                    <Button
                            android:id="@+id/enter_to_registration_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/login_reg_but"/>

                </LinearLayout>
            </FrameLayout>

            <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:background="@drawable/login_main_under_button"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/enter_with_fb_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"

                        android:background="@drawable/login_fb_btn"/>

                <Button
                        android:id="@+id/enter_with_vk_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"

                        android:background="@drawable/login_vk_but"/>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>


</FrameLayout>