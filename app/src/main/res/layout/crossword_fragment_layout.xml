<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:id="@+id/view_crossword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crossword"
            />
    <!-- =================================================================================== -->

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    </LinearLayout>

    <!-- =================================================================================== -->

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/crossword_panel_bg_title">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/frame_border">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:textColor="@color/puzzle_hints_title_text_color"
                        android:shadowColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:shadowDx="0"
                        android:shadowDy="-1"
                        android:shadowRadius="1"
                        android:text="@string/hints"/>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/puzzles_hints_rest">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:shadowColor="@android:color/black"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:shadowDx="0"
                                android:shadowDy="1"
                                android:shadowRadius="1"
                                android:text="@string/hints_rest"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:shadowColor="@android:color/black"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:shadowDx="0"
                                android:shadowDy="-1"
                                android:shadowRadius="1"
                                android:text="0"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="bottom"
                        android:background="@drawable/puzzles_hints_panel10">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:background="@drawable/puzzles_buy_hints_but">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="@string/buy_one_dollar"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="bottom"
                        android:background="@drawable/puzzles_hints_panel20">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:background="@drawable/puzzles_buy_hints_but">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="@string/buy_two_dollar"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="bottom"
                        android:background="@drawable/puzzles_hints_panel30">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:background="@drawable/puzzles_buy_hints_but">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="@string/buy_three_dollar"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </FrameLayout>

    <!-- =================================================================================== -->

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    </LinearLayout>


</LinearLayout>