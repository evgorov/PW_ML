<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/puzzles_badge_done_bg">

        <LinearLayout
                android:id="@+id/crossword_badge_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/puzzles_badges_bg_brilliant">
            <LinearLayout
                    android:id="@+id/crossword_badge_fg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:background="@drawable/puzzles_badges_bg_unresolved">

                <!--<com.ltst.prizeword.tools.MagicTextView-->
                <!--xmlns:qwerjk="http://schemas.android.com/apk/res/com.ltst.prizeword"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="24sp"-->
                <!--android:textColor="@color/puzzle_badge_digit_brilliant_color"-->
                <!--android:textStyle="bold"-->
                <!--qwerjk:foreground="@drawable/puzzles_badges_bg_gold_resolved"-->
                <!--qwerjk:innerShadowDx="10"-->
                <!--qwerjk:innerShadowDy="10"-->
                <!--qwerjk:innerShadowColor="@color/puzzle_badge_digit_inner_shadow_color"-->
                <!--qwerjk:innerShadowRadius="5"-->
                <!--qwerjk:outerShadowDx="0"-->
                <!--qwerjk:outerShadowDy="5"-->
                <!--qwerjk:outerShadowColor="@color/puzzle_badge_digit_ouner_shadow_color"-->
                <!--qwerjk:outerShadowRadius="5"-->
                <!--android:text="Some text" />-->

                <LinearLayout
                        android:id="@+id/crossword_badge_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/puzzles_badges_bg_unresolved">
                </LinearLayout>

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/crossword_badge_unresolved_container"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/crossword_badge_rercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/puzzles_badge_score_text_size"
                    android:textColor="@color/puzzle_badge_digit_percent_color"
                    android:text="43%"
                    />

            <SeekBar
                    android:id="@+id/crossword_set_progressbar"
                    android:layout_height="wrap_content"
                    android:layout_width="60dp"
                    android:max="100"
                    android:progress="75"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/crossword_badge_resolved_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                android:gravity="center">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/puzzles_badge_star"
                    />

            <TextView
                    android:id="@+id/crossword_badge_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4sp"
                    android:layout_marginBottom="1sp"
                    android:textSize="@dimen/puzzles_badge_score_text_size"
                    android:text="1 290"
                    />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>