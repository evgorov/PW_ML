<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/score_footer_header_and_first_item_friends">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">


            <TextView
                    android:id="@+id/crossword_panel_title_text"
                    android:layout_marginLeft="@dimen/puzzles_badge_range_between_text_size"
                    android:textSize="@dimen/puzzles_badge_title_text_size"
                    style="@style/PuzzlesHintParagraphTextStyle"
                    android:text="@string/puzzless_hint_brilliant_crossword"/>


            <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/score_right_top_score_bg">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/score_right_top_score_icon"/>

                <TextView
                        android:layout_marginLeft="5dp"
                        style="@style/ScoreTopPanelText"
                        android:text="21212"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>