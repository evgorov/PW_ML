<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_gravity="center_horizontal"
              android:background="@drawable/invite_item_bg">

    <ImageView
            android:id="@+id/invite_item_ava"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="10dp"
            android:background="@drawable/invite_empty_ava"/>

    <TextView
            android:id="@+id/invite_item_name_textview"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:maxLines="2"
            android:maxWidth="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            style="@style/InviteItemNameText"

            />

    <Button
            android:id="@+id/invite_add_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/invite_invite_but"/>

</LinearLayout>